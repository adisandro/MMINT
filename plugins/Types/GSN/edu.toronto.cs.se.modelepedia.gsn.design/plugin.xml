<plugin>
  <extension point="org.eclipse.sirius.componentization">
    <component class="edu.toronto.cs.se.modelepedia.gsn.design.Activator"
               id="edu.toronto.cs.se.modelepedia.gsn.design"
	       name="gsn">
    </component>
  </extension>
  
   <extension
         point="edu.toronto.cs.se.mmint.editors">
      <editorType
            modelTypeUri="http://se.cs.toronto.edu/modelepedia/GSN"
            id="edu.toronto.cs.se.modelepedia.gsn.design"
            isDiagram="true"
            wizardId="edu.toronto.cs.se.modelepedia.gsn.presentation.GSNModelWizardID">
         <type
               name="GSN Sirius Diagram"
               uri="http://se.cs.toronto.edu/modelepedia/Representation_GSN">
         </type>
      </editorType>
   </extension>

   <extension
         point="org.eclipse.sirius.externalJavaAction">
      <javaActions
            actionClass="edu.toronto.cs.se.modelepedia.gsn.design.tools.CreateDomainGoal"
            id="edu.toronto.cs.se.modelepedia.gsn.design.tools.CreateDomainGoal">
      </javaActions>
      <javaActions
            actionClass="edu.toronto.cs.se.modelepedia.gsn.design.tools.CreateDomainDecompositionStrategy"
            id="edu.toronto.cs.se.modelepedia.gsn.design.tools.CreateDomainDecompositionStrategy">
      </javaActions>
      <javaActions
            actionClass="edu.toronto.cs.se.modelepedia.gsn.design.context.DomainDecomposition"
            id="edu.toronto.cs.se.modelepedia.gsn.design.context.DomainDecomposition">
      </javaActions>
      <javaActions
            actionClass="edu.toronto.cs.se.modelepedia.gsn.design.context.PropertyDecomposition"
            id="edu.toronto.cs.se.modelepedia.gsn.design.context.PropertyDecomposition">
      </javaActions>
      <javaActions
            actionClass="edu.toronto.cs.se.modelepedia.gsn.design.context.GoalDecompositionCheck"
            id="edu.toronto.cs.se.modelepedia.gsn.design.context.GoalDecompositionCheck">
      </javaActions>
   </extension>

</plugin>
